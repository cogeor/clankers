<?xml version="1.0"?>
<robot name="cartpole">
    <!-- Classic cart-pole: prismatic cart on a rail + revolute pole -->

    <link name="rail">
        <inertial>
            <mass value="100.0"/>
            <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
        </inertial>
        <visual>
            <geometry>
                <box size="2.0 0.05 0.02"/>
            </geometry>
        </visual>
    </link>

    <link name="cart">
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.15 0.1 0.05"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size="0.15 0.1 0.05"/>
            </geometry>
        </collision>
    </link>

    <link name="pole">
        <inertial>
            <origin xyz="0 0 0.2"/>
            <mass value="0.1"/>
            <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.0001"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.2"/>
            <geometry>
                <cylinder radius="0.01" length="0.4"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.2"/>
            <geometry>
                <cylinder radius="0.01" length="0.4"/>
            </geometry>
        </collision>
    </link>

    <joint name="cart_slide" type="prismatic">
        <parent link="rail"/>
        <child link="cart"/>
        <origin xyz="0 0 0.035"/>
        <axis xyz="1 0 0"/>
        <limit lower="-1.0" upper="1.0" effort="20" velocity="5"/>
        <dynamics damping="0.5" friction="0.1"/>
    </joint>

    <joint name="pole_hinge" type="revolute">
        <parent link="cart"/>
        <child link="pole"/>
        <origin xyz="0 0 0.025"/>
        <axis xyz="0 1 0"/>
        <limit lower="-0.418" upper="0.418" effort="0" velocity="10"/>
        <dynamics damping="0.01" friction="0.001"/>
    </joint>
</robot>
