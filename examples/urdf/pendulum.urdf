<?xml version="1.0"?>
<robot name="pendulum">
    <!-- Simple inverted pendulum: fixed base + one revolute joint + arm -->

    <link name="base">
        <inertial>
            <mass value="10.0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.2 0.2 0.1"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.2 0.1"/>
            </geometry>
        </collision>
    </link>

    <link name="arm">
        <inertial>
            <origin xyz="0 0 0.25"/>
            <mass value="1.0"/>
            <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.001"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.25"/>
            <geometry>
                <cylinder radius="0.02" length="0.5"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.25"/>
            <geometry>
                <cylinder radius="0.02" length="0.5"/>
            </geometry>
        </collision>
    </link>

    <joint name="pivot" type="revolute">
        <parent link="base"/>
        <child link="arm"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-3.14159" upper="3.14159" effort="10" velocity="5"/>
        <dynamics damping="0.1" friction="0.05"/>
    </joint>
</robot>
