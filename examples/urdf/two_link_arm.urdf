<?xml version="1.0"?>
<robot name="two_link_arm">
    <!-- 2-DOF planar robot arm: shoulder (Z-axis) + elbow (Z-axis) -->

    <link name="base">
        <inertial>
            <mass value="10.0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.1"/>
            </geometry>
        </visual>
    </link>

    <link name="upper_arm">
        <inertial>
            <origin xyz="0 0 0.15"/>
            <mass value="2.0"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.002"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.15"/>
            <geometry>
                <cylinder radius="0.03" length="0.3"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.15"/>
            <geometry>
                <cylinder radius="0.03" length="0.3"/>
            </geometry>
        </collision>
    </link>

    <link name="forearm">
        <inertial>
            <origin xyz="0 0 0.125"/>
            <mass value="1.0"/>
            <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.001"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.125"/>
            <geometry>
                <cylinder radius="0.025" length="0.25"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.125"/>
            <geometry>
                <cylinder radius="0.025" length="0.25"/>
            </geometry>
        </collision>
    </link>

    <link name="end_effector">
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </visual>
    </link>

    <joint name="shoulder" type="revolute">
        <parent link="base"/>
        <child link="upper_arm"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-2.617" upper="2.617" effort="50" velocity="3"/>
        <dynamics damping="0.5" friction="0.1"/>
    </joint>

    <joint name="elbow" type="revolute">
        <parent link="upper_arm"/>
        <child link="forearm"/>
        <origin xyz="0 0 0.3" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-2.094" upper="2.094" effort="30" velocity="5"/>
        <dynamics damping="0.3" friction="0.05"/>
    </joint>

    <joint name="ee_fixed" type="fixed">
        <parent link="forearm"/>
        <child link="end_effector"/>
        <origin xyz="0 0 0.25"/>
    </joint>
</robot>
